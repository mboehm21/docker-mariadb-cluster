CREATE USER 'replica'@'%' IDENTIFIED BY 'replica';
GRANT REPLICATION SLAVE ON *.* TO 'replica'@'%';

FLUSH PRIVILEGES;

STOP SLAVE;

CHANGE MASTER TO
  MASTER_HOST='db-1',
  MASTER_USER='replica',
  MASTER_PASSWORD='replica',
  MASTER_PORT=3306,
  MASTER_CONNECT_RETRY=10,
  MASTER_USE_GTID = slave_pos;

SELECT SLEEP(10);

CHANGE MASTER TO
  MASTER_LOG_FILE='cluster-bin.000003',
  MASTER_LOG_POS=344;

SELECT SLEEP(5);

START SLAVE;
